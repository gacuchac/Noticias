<div class="card card-outline-primary" >
  <div class="card-block">
    <h2 class="card-title"><%= @article.titulo %></h2>
    <h4 class="card-subtitle"><%= @article.bajada %></h4>
    <p class="card-text">
    <%= @article.cuerpo %></p>
    <p class="card-text" > <small class="text-muted">Creado:
      <%= @article.created_at %> </small></p>
  </div>
</div>

<h2>Comentarios</h2>
<%= render @article.comments %>

<h2>Agregar un comentario:</h2>
<%= render 'comments/form' %>

<%= link_to 'Editar', edit_article_path(@article), :class => "btn btn-primary" %> |

<%= link_to 'Administrar', articles_path, :class => "btn btn-primary" %> |

<%= link_to 'Inicio', root_path, :class => "btn btn-primary" %>
